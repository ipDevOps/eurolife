@using Wedia.Foundation.Dictionary.Extensions
@using Wedia.Feature.FAQ
@using Wedia.Foundation.Alerts
@using Wedia.Foundation.Alerts.Extensions
@using Wedia.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{
  if (!Model?.Item?.DescendsFrom(Templates.FaqGroup.ID) ?? true)
  {
    @Html.PageEditorError(AlertTexts.InvalidDataSourceTemplate(Templates.FaqGroup.ID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.Item?.ID, Model.Rendering.Item?.ID)
    return;
  }

  var guiID = Guid.NewGuid().ToString();
}

<section class="m-b-96 relator">
  <div class="center center--1100">
    <ul class="accordion">

      @foreach (var faq in Model.Item.GetMultiListValueItems(Templates.FaqGroup.Fields.GroupMember).Select((content, index) => new { content, index}))
      {
        <li>
          <input type="checkbox" name="panel" id="panel-@guiID-@faq.index">
          <label for="panel-@guiID-@faq.index">
            @Html.Sitecore().Field(Templates.Faq.Fields.Question, faq.content)
            <span class="accordion__state"></span>
          </label>
          <div class="accordion__content">
             <p class="m-b-16">@Html.Sitecore().Field(Templates.Faq.Fields.Answer, faq.content)</p>
          </div>
        </li>
      }
    </ul>
  </div>
</section>